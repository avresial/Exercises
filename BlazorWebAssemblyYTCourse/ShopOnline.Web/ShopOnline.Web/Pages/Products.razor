@page "/"
@inherits ProductsBase


@if (Products == null)
{
    <DisplaySpinner />
}
else
{
    var productCount = Products.Count();
    @if (productCount > 0)
    {
        var groupedProductsByCategory = GetGrouppedProductsByCathegory();

        foreach (var prodGroup in groupedProductsByCategory)
        {
            <h4> @GetCathegoryName(prodGroup)</h4>
            <div class="row mt-3">
                <DisplayProducts Products="@prodGroup.Take(4)"></DisplayProducts>
            </div>
            <hr class="mb-3" />
        }

    }
}